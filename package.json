{
  "name": "trackr-lib",
  "version": "0.0.0",
  "description": "javascript library to track blockchain public keys",
  "main": "./dist/trackr-lib.js",
  "types": "./dist/trackr-lib.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "./node_modules/.bin/tsc",
    "test": "mocha",
    "test:prod": "./node_modules/.bin/yarn run lint && test",
    "clean": "rm -rf ./dist",
    "cleanAll": "rm -rf ./dist ./node_modules",
    "pretty": "prettier --write --no-semi --single-quote \"{src,test}/**/*.ts\"",
    "lint": "tslint -t codeFrame 'src/**/*.ts' 'test/**/*.ts'"
  },
  "lint-staged": {
    "{src,test}/**/*.ts": [
      "./node_modules/.bin/yarn pretty",
      "git add"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sonarplanet/trackr-lib.git"
  },
  "author": "Guillaume Nicolas <guillaume.nicolas@spacelephant.org> http://spacelephant.org#guillaume",
  "license": "Apache-2.0",
  "engines": {
    "node": "<10.0.0"
  },
  "bugs": {
    "url": "https://github.com/sonarplanet/trackr-lib/issues"
  },
  "homepage": "https://github.com/sonarplanet/trackr-lib#readme",
  "dependencies": {
    "@types/rewire": "^2.5.28",
    "web3": "^1.0.0-beta.34"
  },
  "devDependencies": {
    "@types/chai": "^4.1.3",
    "@types/express": "^4.11.1",
    "@types/mocha": "^5.2.0",
    "chai": "^4.1.2",
    "express": "^4.16.3",
    "husky": "^0.14.3",
    "lint-staged": "^7.0.4",
    "mocha": "^5.1.1",
    "nodemon": "^1.17.3",
    "nyc": "^11.7.1",
    "prettier": "1.12.1",
    "rimraf": "^2.6.2",
    "source-map-support": "^0.5.5",
    "ts-jest": "^22.4.4",
    "ts-node": "^6.0.2",
    "tslint": "^5.9.1",
    "tslint-config-prettier": "^1.12.0",
    "tslint-config-standard": "^7.0.0",
    "typescript": "^2.8.1",
    "yarn": "^1.6.0"
  }
}
